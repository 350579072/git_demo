<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--    是上下文的参数（属于整个web工程    它通过servletcontext类来访问 -->
    <context-param>
        <param-name>username</param-name>
        <param-value>context</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>

<!--    servlet  标签配置servlet配置程序     -->
    <servlet>
<!--    servlet-name标签     servlet程序起一个别名             -->
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.zhao.Tomcat_01.FirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>com.zhao.Tomcat_01.SecondServlet</servlet-class>
<!--       他是通过 servletconfig 来进行访问    -->
        <init-param>
            <param-name>url</param-name>
            <param-value>www.xindongfan.com</param-value>
        </init-param>
    </servlet>
    <!--    mapping 配置地址   -->
    <servlet-mapping>
<!--     name标签的作用是告诉服务器配置的地址给那个servlet程序使用   -->
        <servlet-name>FirstServlet</servlet-name>
<!--      url-patt ern 标签配置访问路径    localhost:8080/Tom_01/first    必须加斜杠  -->
        <url-pattern>/first</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/second</url-pattern>
    </servlet-mapping>











</web-app>